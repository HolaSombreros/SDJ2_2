<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="500.0" spacing="10.0" userData="Login" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.LoginViewController">
   <children>
      <Label text="Welcome ">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <TextField fx:id="usernameInput" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#onEnter" prefWidth="300.0" promptText="Username">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button defaultButton="true" mnemonicParsing="false" onAction="#login" prefWidth="300.0" text="Login">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorLabel" style="-fx-font-weight: bold; -fx-text-fill: red;" text="Error Label">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
   </children>
</VBox>
